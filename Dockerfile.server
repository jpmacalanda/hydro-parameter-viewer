
FROM python:3.9-slim
WORKDIR /app

# Install required packages including build essentials for netifaces
RUN apt-get update && apt-get install -y \
    python3-serial \
    build-essential \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

RUN pip install websockets asyncio pyserial netifaces

# Create logs directory
RUN mkdir -p /app/logs && chmod 777 /app/logs

# Copy server script
COPY hydroponics_server.py .

# Run the server
CMD ["python3", "hydroponics_server.py"]

